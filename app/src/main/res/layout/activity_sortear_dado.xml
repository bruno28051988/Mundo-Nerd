<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SortearDadoActivity"
    android:orientation="vertical"
    android:background="@color/azul">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/azul_claro">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_voltar"
            android:onClick="voltar"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Sorteador Dados"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 até 6"
        android:layout_marginTop="52dp"
        android:onClick="sortearDadoSeis"
        android:backgroundTint="@color/azul_claro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 até 12"
        android:layout_marginTop="24dp"
        android:onClick="sortearDadoDoze"
        android:backgroundTint="@color/azul_claro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 até 20"
        android:layout_marginTop="24dp"
        android:onClick="sortearDadoVinte"
        android:backgroundTint="@color/azul_claro"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 até 100"
        android:layout_marginTop="24dp"
        android:onClick="sortearDadoCem"
        android:backgroundTint="@color/azul_claro"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imgDado"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/azul"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textResultadoDado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clique no botão para sortear..."
            android:textSize="24sp"
            android:background="@color/azul"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>





</LinearLayout>